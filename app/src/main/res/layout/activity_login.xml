<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.bluecats.app.bcdatatransfer.LoginActivity">

    <TextView
            android:text="@string/copy_app_token"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/et_apptoken"
            android:layout_margin="10dp"
            android:id="@+id/tv_hint"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="2cac72de-8100-4b19-b601-26290e98fb13"
            android:layout_centerInParent="true"
            android:id="@+id/et_apptoken"
            android:layout_centerVertical="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start SDK"
            android:id="@+id/btn_login"
            android:layout_below="@+id/et_apptoken"
            android:layout_centerHorizontal="true"/>


</RelativeLayout>
